<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart - <%= siteName %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; background: #f4f4f4; }
    
    .header { background: linear-gradient(135deg, #ff6f61 0%, #e55a4e 100%); color: white; padding: 15px 0; }
    .header-container { max-width: 1200px; margin: 0 auto; padding: 0 20px; display: flex; align-items: center; justify-content: space-between; }
    .logo { font-size: 28px; font-weight: bold; text-decoration: none; color: white; }
    .logo span { color: #ffe4e1; }
    
    .main-container { max-width: 1200px; margin: 0 auto; padding: 20px; }
    
    h1 { font-size: 28px; margin-bottom: 25px; color: #333; }
    
    .cart-layout { display: grid; grid-template-columns: 1fr 350px; gap: 30px; }
    
    .cart-items { background: white; border-radius: 12px; padding: 20px; box-shadow: 0 2px 15px rgba(0,0,0,0.08); }
    
    .cart-item { display: flex; gap: 20px; padding: 20px 0; border-bottom: 1px solid #eee; }
    .cart-item:last-child { border-bottom: none; }
    
    .item-image { width: 100px; height: 100px; background: linear-gradient(135deg, #fff5f4 0%, #ffe4e1 100%); border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 40px; }
    
    .item-details { flex: 1; }
    .item-name { font-size: 16px; font-weight: 600; color: #333; margin-bottom: 5px; }
    .item-brand { font-size: 13px; color: #999; margin-bottom: 10px; }
    .item-price { font-size: 18px; font-weight: bold; color: #333; }
    .item-mrp { text-decoration: line-through; color: #999; font-size: 14px; margin-left: 10px; }
    
    .item-actions { display: flex; flex-direction: column; align-items: flex-end; gap: 15px; }
    
    .qty-controls { display: flex; align-items: center; border: 1px solid #ddd; border-radius: 6px; overflow: hidden; }
    .qty-btn { width: 35px; height: 35px; border: none; background: #f5f5f5; cursor: pointer; font-size: 18px; }
    .qty-btn:hover { background: #eee; }
    .qty-value { width: 45px; height: 35px; display: flex; align-items: center; justify-content: center; font-weight: 500; }
    
    .remove-btn { color: #ff6f61; background: none; border: none; cursor: pointer; font-size: 14px; }
    .remove-btn:hover { text-decoration: underline; }
    
    .cart-summary { background: white; border-radius: 12px; padding: 25px; box-shadow: 0 2px 15px rgba(0,0,0,0.08); height: fit-content; position: sticky; top: 20px; }
    .cart-summary h3 { font-size: 18px; margin-bottom: 20px; color: #333; }
    
    .summary-row { display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #eee; }
    .summary-row.total { border-bottom: none; font-size: 20px; font-weight: bold; color: #333; margin-top: 10px; padding-top: 15px; border-top: 2px solid #333; }
    .savings { color: #388e3c; }
    
    .checkout-btn { width: 100%; padding: 15px; background: linear-gradient(135deg, #ff6f61 0%, #e55a4e 100%); color: white; border: none; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; margin-top: 20px; transition: transform 0.3s ease; }
    .checkout-btn:hover { transform: translateY(-2px); box-shadow: 0 5px 20px rgba(255, 111, 97, 0.4); }
    
    .empty-cart { text-align: center; padding: 60px 20px; }
    .empty-cart h2 { color: #666; margin-bottom: 15px; }
    .empty-cart a { color: #ff6f61; text-decoration: none; font-weight: 500; }
    
    .prescription-warning { background: #fff3e0; border: 1px solid #ffcc80; padding: 15px; border-radius: 8px; margin-bottom: 20px; color: #e65100; font-size: 14px; }
    
    @media (max-width: 768px) { .cart-layout { grid-template-columns: 1fr; } }
  </style>
</head>
<body>
  <header class="header">
    <div class="header-container">
      <a href="/" class="logo">TATA <span>1mg</span></a>
    </div>
  </header>

  <main class="main-container">
    <h1>üõí Shopping Cart</h1>
    
    <% if (cart.items.length === 0) { %>
      <div class="empty-cart">
        <h2>Your cart is empty</h2>
        <p>Looks like you haven't added any medicines yet.</p>
        <a href="/">‚Üê Continue Shopping</a>
      </div>
    <% } else { %>
      <% const hasPrescriptionItems = cart.items.some(item => item.prescriptionRequired); %>
      <% if (hasPrescriptionItems) { %>
        <div class="prescription-warning">
          ‚ö†Ô∏è Some items in your cart require a valid prescription. Please upload your prescription during checkout.
        </div>
      <% } %>
      
      <div class="cart-layout">
        <div class="cart-items">
          <% cart.items.forEach(item => { %>
            <div class="cart-item" data-id="<%= item.medicineId %>">
              <div class="item-image">üíä</div>
              <div class="item-details">
                <h4 class="item-name"><%= item.name %></h4>
                <p class="item-brand"><%= item.brand %></p>
                <% if (item.prescriptionRequired) { %>
                  <span style="background: #fff3e0; color: #e65100; padding: 3px 8px; border-radius: 4px; font-size: 11px;">üìã Prescription Required</span>
                <% } %>
                <p style="margin-top: 10px;">
                  <span class="item-price">‚Çπ<%= item.subtotal.toFixed(2) %></span>
                  <span class="item-mrp">‚Çπ<%= (item.mrp * item.quantity).toFixed(2) %></span>
                </p>
              </div>
              <div class="item-actions">
                <div class="qty-controls">
                  <button class="qty-btn qty-dec" data-medicine-id="<%= item.medicineId %>" data-quantity="<%= item.quantity - 1 %>">‚àí</button>
                  <span class="qty-value"><%= item.quantity %></span>
                  <button class="qty-btn qty-inc" data-medicine-id="<%= item.medicineId %>" data-quantity="<%= item.quantity + 1 %>">+</button>
                </div>
                <button class="remove-btn" data-medicine-id="<%= item.medicineId %>">üóëÔ∏è Remove</button>
              </div>
            </div>
          <% }); %>
        </div>
        
        <div class="cart-summary">
          <h3>Order Summary</h3>
          <div class="summary-row">
            <span>Items (<%= cart.itemCount %>)</span>
            <span>‚Çπ<%= cart.items.reduce((sum, i) => sum + (i.mrp * i.quantity), 0).toFixed(2) %></span>
          </div>
          <div class="summary-row savings">
            <span>Discount</span>
            <span>- ‚Çπ<%= (cart.savings || 0).toFixed(2) %></span>
          </div>
          <div class="summary-row">
            <span>Delivery</span>
            <span><%= cart.total >= 500 ? 'FREE' : '‚Çπ40.00' %></span>
          </div>
          <div class="summary-row total">
            <span>Total</span>
            <span>‚Çπ<%= (cart.total + (cart.total >= 500 ? 0 : 40)).toFixed(2) %></span>
          </div>
          <button class="checkout-btn" onclick="proceedToCheckout()">Proceed to Checkout</button>
          <p style="text-align: center; margin-top: 15px; font-size: 13px; color: #388e3c;">
            You save ‚Çπ<%= (cart.savings || 0).toFixed(2) %> on this order!
          </p>
        </div>
      </div>
    <% } %>
  </main>

  <script>
    const userId = '<%= userId %>';
    
    // Add event listeners for quantity buttons
    document.querySelectorAll('.qty-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const medicineId = this.dataset.medicineId;
        const quantity = parseInt(this.dataset.quantity);
        updateQuantity(medicineId, quantity);
      });
    });
    
    document.querySelectorAll('.remove-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const medicineId = this.dataset.medicineId;
        removeItem(medicineId);
      });
    });
    
    async function updateQuantity(medicineId, quantity) {
      if (quantity < 1) {
        await removeItem(medicineId);
        return;
      }
      
      const response = await fetch(`/api/cart/${userId}/update`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ medicineId, quantity })
      });
      
      if ((await response.json()).success) {
        location.reload();
      }
    }
    
    async function removeItem(medicineId) {
      const response = await fetch(`/api/cart/${userId}/remove/${medicineId}`, {
        method: 'DELETE'
      });
      
      if ((await response.json()).success) {
        location.reload();
      }
    }
    
    function proceedToCheckout() {
      window.location.href = '/checkout?userId=' + userId;
    }
  </script>
</body>
</html>
